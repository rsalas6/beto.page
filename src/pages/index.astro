---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import resumeData from "@data/resume.json";
import projectsData from "@data/projects.json";

const { personal } = resumeData;
const featuredProjects = projectsData.filter((p: any) => p.featured).slice(0, 3);
---

<Layout title="Roberto Salas — Mi Historia" description="Desarrollador de software. Esta es mi historia.">
  <main class="min-h-screen">

    <!-- Subtle texture overlay -->
    <div class="fixed inset-0 pointer-events-none opacity-10 dark:opacity-20" style="background-image: url('data:image/svg+xml,%3Csvg viewBox=%220 0 200 200%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cfilter id=%22noise%22%3E%3CfeTurbulence type=%22fractalNoise%22 baseFrequency=%220.65%22 numOctaves=%223%22 stitchTiles=%22stitch%22/%3E%3C/filter%3E%3Crect width=%22100%25%22 height=%22100%25%22 filter=%22url(%23noise)%22 opacity=%220.06%22/%3E%3C/svg%3E');"></div>

    <Header lang="es" currentPage="/" />

    <!-- Hero: Editorial Introduction -->
    <section class="relative min-h-screen flex items-center pt-24 pb-16 md:pt-20 md:pb-32 px-4 sm:px-6">
      <div class="max-w-6xl mx-auto w-full">
        <div class="grid lg:grid-cols-12 gap-8 lg:gap-16 items-center">

          <!-- Left: The Story -->
          <div class="lg:col-span-7 space-y-6 md:space-y-8">
            <!-- Main headline -->
            <h1 class="font-serif text-4xl sm:text-5xl md:text-6xl lg:text-7xl leading-[1.1] tracking-tight">
              Hola, soy
              <span class="italic text-[#7cb872]">Roberto</span>
            </h1>

            <!-- Bio paragraph -->
            <div class="space-y-4 md:space-y-6 text-base sm:text-lg md:text-xl leading-relaxed text-[var(--color-text-muted)]">
              <p>
                Llevo <strong class="text-[var(--color-text)] font-medium">más de diez años</strong> escribiendo código.
                Empecé en la universidad, rompiendo cosas y aprendiendo a arreglarlas.
                Hoy construyo aplicaciones que usan <strong class="text-[var(--color-text)] font-medium">millones de personas</strong>.
              </p>
              <p>
                Entre commits y deployments, completé dos maestrías: una en
                <em class="text-[var(--color-text)]">Seguridad Informática</em> y otra en <em class="text-[var(--color-text)]">Ciencia de Datos</em>.
                No porque me gusten los títulos, sino porque me fascina entender cómo funcionan las cosas.
              </p>
            </div>

          </div>

          <!-- Right: Photo placeholder / Visual (hidden on mobile) -->
          <div class="hidden lg:block lg:col-span-5">
            <div class="relative">
              <!-- Decorative frame -->
              <div class="absolute -inset-4 border border-[#7cb872]/20 rounded-sm"></div>
              <div class="absolute -inset-8 border border-[var(--color-border)] rounded-sm"></div>

              <!-- Main visual -->
              <div class="relative aspect-[4/5] bg-gradient-to-br from-[#7cb872]/10 to-[var(--color-border)] rounded-sm overflow-hidden">
                <!-- Abstract pattern -->
                <div class="absolute inset-0 opacity-20">
                  <div class="absolute top-1/4 left-1/4 w-32 h-32 border border-[#7cb872] rounded-full"></div>
                  <div class="absolute bottom-1/3 right-1/4 w-24 h-24 bg-[#7cb872]/20"></div>
                  <div class="absolute top-1/2 left-1/2 w-16 h-16 bg-[var(--color-text)]/10 rotate-45"></div>
                </div>

                <!-- Initials -->
                <div class="absolute inset-0 flex items-center justify-center">
                  <span class="font-serif text-[12rem] text-[#7cb872]/10 italic">rs</span>
                </div>

                <!-- Caption -->
                <div class="absolute bottom-6 left-6 right-6">
                  <p class="text-xs text-[var(--color-text-subtle)] tracking-wide">
                    {new Date().getFullYear()}
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section class="py-16 md:py-32 px-4 sm:px-6 bg-[var(--color-bg-alt)]">
      <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 md:gap-8 mb-10 md:mb-16">
          <div>
            <p class="text-[#7cb872] text-sm uppercase tracking-[0.25em] font-medium mb-3 md:mb-4">Trabajo destacado</p>
            <h2 class="font-serif text-3xl sm:text-4xl md:text-5xl leading-tight">
              Algunos proyectos<br/>
              <span class="italic">que me enorgullecen</span>
            </h2>
          </div>
          <a href="/projects" class="inline-flex items-center gap-2 text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors group cursor-pointer">
            Ver todos
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>

        <!-- Projects grid -->
        <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6 md:gap-8">
          {featuredProjects.map((project: any) => (
            <a
              href={project.url || project.github || "#"}
              target="_blank"
              class="group block"
            >
              <div class="aspect-[4/3] bg-[var(--color-border)] dark:bg-[var(--color-text)]/5 rounded-sm mb-6 overflow-hidden relative">
                <div class="absolute inset-0 flex items-center justify-center">
                  <span class="font-serif text-6xl text-[var(--color-text)]/10 italic">{project.title.charAt(0)}</span>
                </div>
                <div class="absolute inset-0 bg-[#7cb872]/80 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                  <span class="text-black text-sm uppercase tracking-wider font-medium">Ver proyecto</span>
                </div>
              </div>
              <p class="text-[var(--color-text-subtle)] text-xs uppercase tracking-wider mb-2">{project.category}</p>
              <h3 class="font-serif text-xl mb-2 group-hover:text-[#7cb872] transition-colors">{project.title}</h3>
              <p class="text-[var(--color-text-muted)] text-sm leading-relaxed">{project.description.es}</p>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Philosophy / Personal Note -->
    <section class="py-16 md:py-32 px-4 sm:px-6">
      <div class="max-w-3xl mx-auto text-center">
        <div class="w-12 md:w-16 h-px bg-[#7cb872] mx-auto mb-8 md:mb-12"></div>
        <blockquote class="font-serif text-2xl sm:text-3xl md:text-4xl leading-relaxed text-[var(--color-text-muted)] italic mb-6 md:mb-8">
          "El código es solo una herramienta. Lo que importa es el problema que resuelves
          y las personas a las que ayudas."
        </blockquote>
        <p class="text-sm md:text-base text-[var(--color-text-subtle)]">— Mi filosofía después de 10+ años</p>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-12 md:py-20 px-4 sm:px-6 border-t border-[var(--color-border)]">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 gap-10 md:gap-16 items-center">
          <div>
            <p class="text-[#7cb872] text-sm uppercase tracking-[0.25em] font-medium mb-3 md:mb-4">Conectemos</p>
            <h2 class="font-serif text-2xl sm:text-3xl md:text-4xl leading-tight mb-4 md:mb-6">
              ¿Tienes un proyecto interesante
              <span class="italic"> o solo quieres saludar?</span>
            </h2>
            <p class="text-sm md:text-base text-[var(--color-text-muted)] leading-relaxed">
              Siempre me gusta conocer gente nueva y escuchar sobre proyectos interesantes.
              Si necesitas servicios profesionales, visita <a href="https://saltek.mx" target="_blank" class="text-[#7cb872] hover:underline cursor-pointer">saltek.mx</a>.
            </p>
          </div>
          <div class="space-y-4 md:space-y-6">
            <a href={`mailto:${personal.email}`} class="flex items-center gap-4 p-4 border border-[var(--color-border)] rounded-lg hover:border-[#7cb872]/30 hover:bg-[#7cb872]/5 transition-all group cursor-pointer">
              <div class="w-10 h-10 md:w-12 md:h-12 rounded-full bg-[var(--color-border)] flex items-center justify-center group-hover:bg-[#7cb872]/10 transition-colors flex-shrink-0">
                <svg class="w-4 h-4 md:w-5 md:h-5 text-[var(--color-text-muted)] group-hover:text-[#7cb872]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="min-w-0">
                <p class="text-xs md:text-sm text-[var(--color-text-subtle)]">Email</p>
                <p class="text-sm md:text-base text-[var(--color-text)] group-hover:text-[#7cb872] transition-colors truncate">{personal.email}</p>
              </div>
            </a>
            <div class="grid grid-cols-3 gap-2 sm:gap-4">
              <a href={personal.social.github} target="_blank" class="flex flex-col sm:flex-row items-center justify-center gap-1 sm:gap-2 p-3 sm:p-4 border border-[var(--color-border)] rounded-lg hover:border-[#7cb872]/30 hover:bg-[#7cb872]/5 transition-all group cursor-pointer">
                <svg class="w-5 h-5 text-[var(--color-text-muted)] group-hover:text-[#7cb872]" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                <span class="text-xs sm:text-sm text-[var(--color-text-muted)] group-hover:text-[#7cb872]">GitHub</span>
              </a>
              <a href={personal.social.linkedin} target="_blank" class="flex flex-col sm:flex-row items-center justify-center gap-1 sm:gap-2 p-3 sm:p-4 border border-[var(--color-border)] rounded-lg hover:border-[#7cb872]/30 hover:bg-[#7cb872]/5 transition-all group cursor-pointer">
                <svg class="w-5 h-5 text-[var(--color-text-muted)] group-hover:text-[#7cb872]" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                <span class="text-xs sm:text-sm text-[var(--color-text-muted)] group-hover:text-[#7cb872]">LinkedIn</span>
              </a>
              <a href={personal.social.x} target="_blank" class="flex flex-col sm:flex-row items-center justify-center gap-1 sm:gap-2 p-3 sm:p-4 border border-[var(--color-border)] rounded-lg hover:border-[#7cb872]/30 hover:bg-[#7cb872]/5 transition-all group cursor-pointer">
                <svg class="w-5 h-5 text-[var(--color-text-muted)] group-hover:text-[#7cb872]" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                <span class="text-xs sm:text-sm text-[var(--color-text-muted)] group-hover:text-[#7cb872]">X</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-6 md:py-8 px-4 sm:px-6 border-t border-[var(--color-border)]">
      <div class="max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-between gap-3 md:gap-4">
        <p class="text-[var(--color-text-subtle)] text-xs md:text-sm">
          © {new Date().getFullYear()} Roberto Salas
        </p>
        <div class="flex items-center gap-4 md:gap-6 text-xs md:text-sm text-[var(--color-text-subtle)]">
          <a href="/en" class="hover:text-[var(--color-text)] transition-colors cursor-pointer">English</a>
          <span>·</span>
          <a href="https://saltek.mx" target="_blank" class="hover:text-[#7cb872] transition-colors cursor-pointer">saltek.mx</a>
        </div>
      </div>
    </footer>

  </main>
</Layout>

<style>
  .font-serif {
    font-family: 'Playfair Display', Georgia, serif;
  }
</style>
