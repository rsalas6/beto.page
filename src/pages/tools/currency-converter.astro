---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { toolGroups } from "@/pages/tools/data";
import type { Tool, ToolGroup } from "@types";
import CurrencyConverterComponent from "@components/tools/currencyConverter.vue";
import BackToPrevious from "@components/BackToPrevious.astro";
import { onPageLoad } from "@astro/client";

// Valores por defecto
let title = 'Tool';
let description = 'Tool description';

// Hook para ejecutar l칩gica al cargar la p치gina
onPageLoad(({ location }) => {
  const currentPath = location.pathname;

  // Log para verificar la ruta actual en el entorno de despliegue
  console.log('Current Path:', currentPath);

  // Encuentra la herramienta correspondiente
  let tool: Tool | null = null;
  for (const group of toolGroups) {
    const foundTool = group.tools.find(t => `/tools/${t.href}` === currentPath);
    if (foundTool) {
      tool = foundTool;
      break;
    }
  }

  // Log para verificar si se encontr칩 la herramienta
  console.log('Found Tool:', tool);

  // Actualiza los valores de title y description si se encontr칩 la herramienta
  if (tool) {
    title = tool.title;
    description = tool.description;
  }
});
---

<Layout title={title} description={description}>
  <Container>
    <div class="animate">
      <BackToPrevious href="/tools">Back to tools</BackToPrevious>
      <div class="my-10">
        <h1 class="text-black dark:text-white text-5xl font-bold">{title}</h1>
        <p class="mt-4 mb-6 text-lg text-gray-700 dark:text-gray-300 leading-relaxed">{description}</p>
      </div>
      <CurrencyConverterComponent client:only="vue" />
    </div>
  </Container>
</Layout>
