---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Container from "@components/Container.astro";
import { useTranslations } from "@i18n/utils";

const t = useTranslations("en");
---

<Layout title="Projects - Roberto Salas" description="Personal and professional projects.">
  <Header lang="en" currentPage="/en/projects" />

  <main class="flex-1 pt-24 pb-16">
    <Container>
      <div class="space-y-8 animate-fade-in">
        <h1 class="text-3xl font-bold text-foreground">{t("nav.projects")}</h1>
        <p class="text-muted">Coming soon...</p>
      </div>
    </Container>
  </main>

  <Footer />
</Layout>
