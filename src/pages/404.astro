---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Container from "@components/Container.astro";
---

<Layout title="404 - Página no encontrada" description="La página que buscas no existe.">
  <Header />

  <main class="flex-1 pt-24 pb-16">
    <Container>
      <div class="flex flex-col items-center justify-center min-h-[50vh] space-y-6 text-center animate-fade-in">
        <h1 class="text-6xl font-bold text-foreground">404</h1>
        <p class="text-xl text-muted">La página que buscas no existe.</p>
        <a
          href="/"
          class="px-4 py-2 bg-foreground text-background rounded-lg text-sm font-medium hover:opacity-90 transition-opacity"
        >
          Volver al inicio
        </a>
      </div>
    </Container>
  </main>

  <Footer />
</Layout>
