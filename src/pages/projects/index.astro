---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import resumeData from "@data/resume.json";
import projectsData from "@data/projects.json";

const { personal } = resumeData;
const projects = projectsData;
const categories = [...new Set(projects.map((p: any) => p.category))];
---

<Layout title="Proyectos - Roberto Salas" description="Portafolio de proyectos de desarrollo web, automatización y seguridad.">
  <main class="min-h-screen">
    <!-- Background -->
    <div class="fixed inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-40 -right-40 w-96 h-96 bg-emerald-500/20 rounded-full blur-[120px]"></div>
      <div class="absolute top-1/2 -left-40 w-80 h-80 bg-blue-500/10 rounded-full blur-[100px]"></div>
    </div>
    <div class="fixed inset-0 bg-[linear-gradient(rgba(255,255,255,.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,.02)_1px,transparent_1px)] bg-[size:60px_60px]"></div>

    <Header lang="es" currentPage="/projects" />

    <!-- Content -->
    <div class="relative pt-32 pb-20 px-6">
      <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="mb-16">
          <p class="text-emerald-400 text-sm uppercase tracking-widest mb-4">Portafolio</p>
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Proyectos</h1>
          <p class="text-xl text-white/50 max-w-2xl">
            Una selección de proyectos en los que he trabajado. Desde aplicaciones web empresariales hasta herramientas de seguridad open source.
          </p>
        </div>

        <!-- Filter Tabs -->
        <div class="flex flex-wrap gap-2 mb-12">
          <button class="filter-btn active px-4 py-2 rounded-full bg-white/10 text-white text-sm transition-all" data-filter="all">
            Todos
          </button>
          {categories.map((cat: string) => (
            <button class="filter-btn px-4 py-2 rounded-full bg-white/5 text-white/50 hover:bg-white/10 hover:text-white text-sm transition-all capitalize" data-filter={cat}>
              {cat}
            </button>
          ))}
        </div>

        <!-- Projects Grid -->
        <div class="grid md:grid-cols-2 gap-6" id="projects-grid">
          {projects.map((project: any) => (
            <a
              href={project.url || project.github || "#"}
              target="_blank"
              class="project-card group relative overflow-hidden rounded-2xl border border-white/10 bg-white/5 hover:border-emerald-400/30 transition-all hover:-translate-y-1"
              data-category={project.category}
            >
              <!-- Image -->
              <div class="h-56 bg-gradient-to-br from-white/10 to-white/5 flex items-center justify-center relative overflow-hidden">
                <span class="text-8xl font-bold opacity-10">{project.title.charAt(0)}</span>

                <!-- Overlay on hover -->
                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>

                <!-- Year badge -->
                <div class="absolute top-4 left-4 px-3 py-1 rounded-full bg-black/50 backdrop-blur-sm text-xs text-white/70">
                  {project.year}
                </div>

                <!-- External link icon -->
                {project.url && (
                  <div class="absolute top-4 right-4 w-10 h-10 rounded-full bg-white/10 backdrop-blur-sm flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </div>
                )}

                <!-- GitHub icon -->
                {project.github && !project.url && (
                  <div class="absolute top-4 right-4 w-10 h-10 rounded-full bg-white/10 backdrop-blur-sm flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                    <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                  </div>
                )}
              </div>

              <!-- Content -->
              <div class="p-6">
                <div class="flex items-center gap-2 mb-3">
                  <span class="px-2 py-0.5 rounded-full bg-emerald-500/20 text-emerald-400 text-xs capitalize">{project.category}</span>
                  {project.featured && (
                    <span class="px-2 py-0.5 rounded-full bg-yellow-500/20 text-yellow-400 text-xs">Destacado</span>
                  )}
                </div>

                <h3 class="text-xl font-semibold mb-2 group-hover:text-emerald-400 transition-colors">{project.title}</h3>
                <p class="text-white/40 text-sm mb-4">{project.subtitle}</p>
                <p class="text-white/60 text-sm mb-6 line-clamp-3">{project.description.es}</p>

                <!-- Tags -->
                <div class="flex flex-wrap gap-2">
                  {project.tags.map((tag: string) => (
                    <span class="px-2 py-1 rounded-full bg-white/5 border border-white/10 text-xs text-white/50">{tag}</span>
                  ))}
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer class="relative border-t border-white/10 px-6 py-8">
      <div class="max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-white/30 text-sm">© 2024 Roberto Salas</p>
        <div class="flex items-center gap-6">
          <a href={personal.social.github} target="_blank" class="text-white/30 hover:text-white transition-colors text-sm">GitHub</a>
          <a href={personal.social.linkedin} target="_blank" class="text-white/30 hover:text-white transition-colors text-sm">LinkedIn</a>
          <a href={`mailto:${personal.email}`} class="text-white/30 hover:text-white transition-colors text-sm">{personal.email}</a>
        </div>
      </div>
    </footer>
  </main>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .filter-btn.active {
    background: rgba(255, 255, 255, 0.1);
    color: white;
  }
  .project-card.hidden {
    display: none;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const filterBtns = document.querySelectorAll('.filter-btn');
    const projectCards = document.querySelectorAll('.project-card');

    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const filter = btn.getAttribute('data-filter');

        // Update active state
        filterBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        // Filter projects
        projectCards.forEach(card => {
          const category = card.getAttribute('data-category');
          if (filter === 'all' || category === filter) {
            card.classList.remove('hidden');
          } else {
            card.classList.add('hidden');
          }
        });
      });
    });
  });
</script>
