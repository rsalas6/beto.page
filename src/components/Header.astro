---
import ThemeToggle from "./ThemeToggle.astro";
import { switchLang } from "@i18n/utils";

interface Props {
  lang?: "es" | "en";
  currentPage?: string;
}

const { lang = "es", currentPage = "" } = Astro.props;

const isSpanish = lang === "es";

const navItems = isSpanish
  ? [
      { href: "/", label: "Inicio" },
      { href: "/projects", label: "Proyectos" },
      { href: "/tools", label: "Tools" },
      { href: "/resume", label: "CV" },
    ]
  : [
      { href: "/en", label: "Home" },
      { href: "/en/projects", label: "Projects" },
      { href: "/tools", label: "Tools" },
      { href: "/en/resume", label: "Resume" },
    ];

const serviciosLabel = isSpanish ? "Servicios" : "Services";
const langSwitchHref = switchLang(currentPage || "/", isSpanish ? "en" : "es");
const langSwitchLabel = isSpanish ? "EN" : "ES";
---

<header class="fixed top-0 left-0 right-0 z-50 bg-[var(--color-bg)]/95 backdrop-blur-md border-b border-[var(--color-border)]">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-4 flex items-center justify-between">
    <!-- Logo -->
    <a href={isSpanish ? "/" : "/en"} class="font-serif text-2xl italic tracking-tight hover:text-[#7cb872] transition-colors">
      rs<span class="text-[#7cb872]">.</span>
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex items-center gap-6">
      {navItems.map((item) => (
        <a
          href={item.href}
          class={`text-sm tracking-wide transition-colors cursor-pointer ${
            currentPage === item.href || (currentPage === "" && (item.href === "/" || item.href === "/en"))
              ? "text-[var(--color-text)]"
              : "text-[var(--color-text-muted)] hover:text-[var(--color-text)]"
          }`}
        >
          {item.label}
        </a>
      ))}
      <a href="https://saltek.mx" target="_blank" class="text-sm tracking-wide text-[#7cb872] hover:underline transition-colors cursor-pointer">
        {serviciosLabel}
      </a>
      <ThemeToggle />
      <a
        href={langSwitchHref}
        class="text-xs px-3 py-1.5 rounded-full border border-[var(--color-border)] text-[var(--color-text-muted)] hover:text-[var(--color-text)] hover:border-[var(--color-text-subtle)] transition-all cursor-pointer"
      >
        {langSwitchLabel}
      </a>
    </nav>

    <!-- Mobile: Theme + Lang + Hamburger -->
    <div class="flex md:hidden items-center gap-3">
      <ThemeToggle />
      <a
        href={langSwitchHref}
        class="text-xs px-2.5 py-1 rounded-full border border-[var(--color-border)] text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-all cursor-pointer"
      >
        {langSwitchLabel}
      </a>
      <button
        id="menu-toggle"
        type="button"
        class="w-9 h-9 flex items-center justify-center rounded-lg border border-[var(--color-border)] hover:border-[var(--color-text-subtle)] transition-colors cursor-pointer"
        aria-label="Menu"
        aria-expanded="false"
      >
        <svg class="w-5 h-5 menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg class="w-5 h-5 close-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden border-t border-[var(--color-border)] bg-[var(--color-bg)]">
    <nav class="flex flex-col px-4 py-4 space-y-1">
      {navItems.map((item) => (
        <a
          href={item.href}
          class={`px-4 py-3 rounded-lg text-base transition-colors cursor-pointer ${
            currentPage === item.href || (currentPage === "" && (item.href === "/" || item.href === "/en"))
              ? "bg-[var(--color-bg-alt)] text-[var(--color-text)] font-medium"
              : "text-[var(--color-text-muted)] hover:bg-[var(--color-bg-alt)] hover:text-[var(--color-text)]"
          }`}
        >
          {item.label}
        </a>
      ))}
      <a
        href="https://saltek.mx"
        target="_blank"
        class="px-4 py-3 rounded-lg text-base text-[#7cb872] hover:bg-[#7cb872]/10 transition-colors cursor-pointer"
      >
        {serviciosLabel} â†’
      </a>
    </nav>
  </div>
</header>

<style>
  .font-serif {
    font-family: 'Playfair Display', Georgia, serif;
  }
</style>

<script>
  function initMobileMenu() {
    const toggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('mobile-menu');
    const menuIcon = toggle?.querySelector('.menu-icon');
    const closeIcon = toggle?.querySelector('.close-icon');

    if (!toggle || !menu) return;

    toggle.addEventListener('click', () => {
      const isOpen = !menu.classList.contains('hidden');

      if (isOpen) {
        menu.classList.add('hidden');
        menuIcon?.classList.remove('hidden');
        closeIcon?.classList.add('hidden');
        toggle.setAttribute('aria-expanded', 'false');
      } else {
        menu.classList.remove('hidden');
        menuIcon?.classList.add('hidden');
        closeIcon?.classList.remove('hidden');
        toggle.setAttribute('aria-expanded', 'true');
      }
    });

    // Close menu on link click
    menu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        menu.classList.add('hidden');
        menuIcon?.classList.remove('hidden');
        closeIcon?.classList.add('hidden');
        toggle.setAttribute('aria-expanded', 'false');
      });
    });
  }

  initMobileMenu();
  document.addEventListener('astro:after-swap', initMobileMenu);
</script>
